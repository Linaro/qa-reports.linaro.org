[Unit]
Description=SQUAD: software quality dashboard
After=postgresql.service

[Service]
User=squad
Group=squad
PrivateTmp=yes
WorkingDirectory={{install_base}}
ExecStart={{install_base}}/bin/squad
Environment=XDG_DATA_HOME={{install_base}}/data
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
